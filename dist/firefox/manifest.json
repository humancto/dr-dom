{
  "manifest_version": 2,
  "name": "Dr. DOM - Advanced Browser Inspector",
  "version": "1.0.0",
  "description": "Professional DOM inspection, network monitoring, error tracking, and performance analysis for any website",
  "permissions": [
    "activeTab",
    "background",
    "storage",
    "debugger",
    "webRequest",
    "webNavigation",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-scripts/live-capture.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/dom-utils.js",
        "content-scripts/error-tracker.js",
        "content-scripts/performance-monitor.js",
        "content-scripts/network-monitor.js",
        "content-scripts/advanced-network-monitor.js",
        "content-scripts/core-web-vitals-monitor.js",
        "content-scripts/dom-inspector.js",
        "content-scripts/coordinator.js",
        "content-scripts/auto-start.js"
      ],
      "css": [
        "content-scripts/inspector-styles.css"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/advanced-popup.html",
    "default_title": "Dr. DOM Advanced Web Analysis",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/*",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "dr-dom@extension.dev",
      "strict_min_version": "88.0"
    }
  }
}