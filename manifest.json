{
  "manifest_version": 3,
  "name": "Dr. DOM - Advanced Browser Inspector",
  "version": "1.0.0",
  "description": "Professional DOM inspection, network monitoring, error tracking, and performance analysis for any website",
  
  "permissions": [
    "activeTab",
    "background",
    "storage",
    "debugger",
    "webRequest",
    "webNavigation",
    "scripting",
    "cookies"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/background-simplified.js"
  },
  
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/privacy-focused-capture.js"],  
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-scripts/enhanced-tracker-detector.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/advanced-popup.html",
    "default_title": "Dr. DOM Advanced Web Analysis",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  
  
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}